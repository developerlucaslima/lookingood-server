// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  Both
  Male
  Female
}

enum Role {
  User
  Establishment
}

model User {
  id            String   @id @default(uuid())
  name          String
  serviceGender Gender   @default(Both)
  email         String   @unique
  passwordHash  String
  createdAt     DateTime @default(now())
  role          Role     @default(User)

  booking Booking[]

  @@map("users")
}

model Establishment {
  id           String   @id @default(uuid())
  name         String
  description  String?
  phone        String?
  imageUrl     String?
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  latitude     Decimal
  longitude    Decimal
  role         Role     @default(Establishment)

  service      Service[]
  Professional Professional[]
  Schedule     Schedule[]
  Booking      Booking[]

  @@map("establishments")
}

model Professional {
  id       String  @id @default(uuid())
  name     String
  imageUrl String?

  establishment   Establishment @relation(fields: [establishmentId], references: [id])
  establishmentId String

  booking Booking[]

  @@map("professionals")
}

model Schedule {
  id             String  @id @default(uuid())
  monOpeningTime String? // Opening time for Monday
  tueOpeningTime String? // Opening time for Tuesday
  wedOpeningTime String? // Opening time for Wednesday
  thuOpeningTime String? // Opening time for Thursday
  friOpeningTime String? // Opening time for Friday
  satOpeningTime String? // Opening time for Saturday
  sunOpeningTime String? // Opening time for Sunday

  monClosingTime String? // Closing time for Monday
  tueClosingTime String? // Closing time for Tuesday
  wedClosingTime String? // Closing time for Wednesday
  thuClosingTime String? // Closing time for Thursday
  friClosingTime String? // Closing time for Friday
  satClosingTime String? // Closing time for Saturday
  sunClosingTime String? // Closing time for Sunday

  establishment   Establishment @relation(fields: [establishmentId], references: [id])
  establishmentId String

  @@map("schedules")
}

model Service {
  id                          String  @id @default(uuid())
  name                        String
  price                       Decimal @db.Decimal(10, 2)
  genderFor                   Gender
  description                 String?
  imageUrl                    String?
  durationMinutes             Int
  modificationDeadlineMinutes Int

  establishment   Establishment @relation(fields: [establishmentId], references: [id])
  establishmentId String

  booking Booking[]

  @@map("services")
}

model Booking {
  id        String   @id @default(uuid())
  status    String
  startTime DateTime
  endTime   DateTime

  Professional    Professional  @relation(fields: [professionalId], references: [id])
  professionalId  String
  service         Service       @relation(fields: [serviceId], references: [id])
  serviceId       String
  user            User          @relation(fields: [userId], references: [id])
  userId          String
  establishment   Establishment @relation(fields: [establishmentId], references: [id])
  establishmentId String

  @@map("bookings")
}
